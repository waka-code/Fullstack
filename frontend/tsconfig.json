{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "_designSystem/Button.tsx", "_designSystem/IconButton.tsx", "_designSystem/ErrorAlert.tsx", "_designSystem/Pagination.tsx", "_designSystem/LoadingSpinner.tsx", "_designSystem/ConfirmPopover.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
